@using imdb_dtdd.Models
@model IEnumerable<imdbModel>
@{
    Layout = null;
}
<html>
<head>
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("Index", "HomeController", FormMethod.Get))
    {
        <span>Name:</span>
        <input type="text" name="name" />
        <input type="submit" value="Search" />
    }
    <hr />
    <table cellpadding="0" cellspacing="0">
        @foreach (imdbModel movie in Model)
        {
            <tr>
                <td>@movie.title</td>
                <td>@movie.rated</td>
                <td>@movie.year</td>
                <td>@movie.director</td>
                <td>@movie.plot</td>
            </tr>
        }
    </table>
</body>
</html>

